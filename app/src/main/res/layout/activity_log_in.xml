<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.example.upneja.feedbackapp.LogIn">

    <ImageView
        android:id="@+id/addprofilepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profilepic" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="USERNAME"
            android:padding="15dp"
            android:layout_below="@+id/addprofilepic"
            android:id="@+id/username_edittext"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:padding="15dp"
        android:layout_below="@+id/username_edittext"
        android:id="@+id/password_edittext"/>

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_edittext"
        android:layout_centerHorizontal="true"
        android:text="LOG IN"
        android:textSize="20sp"
        android:id="@+id/login_button"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="#fff"
        android:id="@+id/progressbar"
        android:visibility="invisible"
        android:progressDrawable="@drawable/progress_bar"></ProgressBar>
        <!--not necessary to include this progress_bar file  -->


</RelativeLayout>
